class Array
	new: (...) =>
		const argc = select("#", ...)
		const argv = [...]

		@n = argc

		for i = 1, argc
			@[i] = argv[i]

	append: (object) =>
		@n += 1
		@[@n] = object
		@

	map: (func) =>
		const result = @@()

		result::append(func(@[i], i)) for i = 1, @n

		result

	filter: (func) =>
		const result = self.__class()

		for i = 1, self.n
			const value = self[i]

			if not func(value, i)
				continue

			result::append(value)

		result


